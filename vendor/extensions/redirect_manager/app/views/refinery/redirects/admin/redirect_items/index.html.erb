<% content_for :admin_content do %>
	<section id='admin-page-content' class='admin-index container-fluid'>
    <div class="row">
      <div class="col-xs-12">
        <h2 class="admin-title"><%= t('.title') %></h2>
        <div class="contextual-menu">
          <% if !searching? && ::Refinery::Redirects::Admin::RedirectItemsController.sortable? && ::Refinery::Redirects::RedirectItem.many? %>
            <button id='reorder_action' class="btn btn-link-gray">
              <i class="icon icon-reorder bump-down"></i> <strong><%= t('reorder',      :scope => 'refinery.admin.search') %></strong>
            </button>
            <button id='reorder_action_done' class="btn btn-link-gray" style="display: none;">
              <i class="icon icon-reorder bump-down"></i> <strong><%= t('reorder_done', :scope => 'refinery.admin.search') %></strong>
            </button>
          <% end %>


          <% if ::Refinery::Redirects::Admin::RedirectItemsController.searchable? %>
            <%= render '/refinery/admin/search', :url => refinery.redirects_admin_redirect_items_path %>
          <% end %>
          <a href="<%= refinery.new_redirects_admin_redirect_item_path %>" class="btn btn-primary">
            <i class="icon icon-add"></i> <span class="hidden-xs-down"><strong>New Redirect</strong></span>
          </a>
        </div>
      </div>
      <div class="col-xs-12 index-listing">
        <%= render 'records' %>
      </div>
    </div>
	</section>
  <%= render '/refinery/admin/make_sortable', options: {tree: false} if !searching? and ::Refinery::Redirects::Admin::RedirectItemsController.sortable? and ::Refinery::Redirects::RedirectItem.many? %>

<% end %>
<%= render 'refinery/redirects/admin/submenu' %>
