<%= render 'refinery/admin/search_header', :url => refinery.redirects_admin_redirect_items_path %>
<div id="redirect_items-index">
  <% if @redirect_items.any? %>
    <ul id="redirect_items" class="list-unstyled sortable_list infinite-scroll-container"
      data-pages-total="<%= @redirect_items.total_pages %>" <% if searching? %> data-url="<%= request.original_fullpath %>" <% end %>>
      <%= render 'redirect_items' %>
    </ul>
    <%= render 'refinery/admin/glass/infinite_scroll_spinner' %>
  <% else %>
    <p class="sortable_list">
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% end %>
    </p>
  <% end %>
</div>
